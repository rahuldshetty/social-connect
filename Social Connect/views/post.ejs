<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">
    <title>Social Connect</title>
    <link rel="stylesheet" type="text/css" media="screen" href="../../assets/post.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="https://fonts.googleapis.com/css?family=Pacifico" />
    <link rel="stylesheet" type="text/css" media="screen" href="https://fonts.googleapis.com/css?family=Cabin" />
</head>

<body>

   
        <div class="topnav">
            <a href="/home/" class="navitem1">Home</a>
            <a href="/home/cpost" class="navitem1">Create Post</a>

            <form method="POST" action="/home/search" class="form1">
                <input type="text" name="sname" class="searchbox" placeholder="Search here...">
                <input type="submit" value="Search" class="searchBtn">
            </form>

            <a href="/auth/logout" class="navitem2">Log Out</a>
            <a href="/home/profile" class="navitem2">Profile</a>
            <a href="/home/friends" class="navitem2">Friends</a>
            <a href="/home/requests" class="navitem2">Requests</a>

        </div>

        
        
        
        <div class="postContainer">
                <div class="postHeader">
                    <img src="<%=userimage%>" class="smallprofileImg" style="background:rgba(0,0,0,0.5);">    
                    <b><p class="pname"><%= user.name %></p></b>
                    <p class="postTime">  <%= post.ptime  %> </p>
                    <% if(post.uid==me.uid) { %> 
                        <a href="/home/delpost/<%=post.pid%>/" class="deletePost"></a>    
                     <% } %>
                </div>
                
                <h5 class="postTitle"> <%= post.ptitle  %> </h5>
                <p class="postDesc">  <%= post.pdesc  %> </p>

               
                  
                

                <form method="POST" action="/home/post/addcomment/<%=post.pid%>">
                    <a href="/home/post/likepost/<%=post.pid%>/<%=post.uid%>" class="likebtn"   
                        <% if(liked==true){ %>
                            style="background-image:url('../../assets/heartaccept.png');opacity:1;"
                        <% } %> 
                    ></a>
                    <p class="nolikes"> <%=nolikes%> Likes </p>
                    <input type="text" name="comment" placeholder="Enter comment here..." class="commentField">
                    <input type="submit" value="Comment it!" class="commentBtn">
                </form>

        </div>

        <div class="commentContainer">
            <% for(var i=0 ; i < comment.length ; i++) { %>
            <div class="commentHeader">
                <img src="<%=commentimage[i]%>" class="commentProfileImg" style="background:rgba(0,0,0,0.5);">    
                <b><p class="cname"><%= comment[i].name %></p></b>
                <p class="cdesc">  <%= comment[i].cdesc  %> </p>
                <p class="ctime">  <%= comment[i].ctime  %> </p>
                 <% if(comment[i].uid==me.uid) { %> 
                    <a href="/home/delcomment/<%=post.pid%>/<%=comment[i].cid%>/" class="delete"></a>    
                 <% } %>
            </div>
            <% } %>
        </div>
        



   

</body>
</html>